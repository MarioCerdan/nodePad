extends layout

block content
 h1= title
 #articles
  - each article in articles
    div.article
      div.created_at= article.created_at
      div.title
        form( method="post", action="/blog/"+article._id)
          input(name="_id", type="hidden", value="delete")
          input(id="delete", value="x", type="submit")
        form( method="post", action="/blog/edit")
          input(name ="_id", type="hidden", value=article._id.toHexString())
          input(id="edit", value="edit", type="submit")
        a(href="/blog/"+article._id)!= article.title
        div.body
            p= article.body
          
 #newpost
  a(href="/blog/new")!= 'new post'
