body
  font-family "Helvetica Neue", "Lucida Grande", "Arial"
  font-size 13px
  text-align center
  text-stroke 1px rgba(255, 255, 255, 0.1)
  color #555
  width 320px
  margin 0 auto
h1, h2
  margin 30px 0 0 0
  font-size 22px
  color #343434
h1
  text-shadow 1px 2px 2px #ddd
  font-size 40px
a
	color #1ca1a3
	text-decoration none
#articles
  text-align left
  margin 0 auto
  width 320px
  .article
    margin 20px
    .created_at
        display none
    .title
      input#edit
        border none
        background transparent
        float right
        margin-top 14px
        font-size 10px
        color #555
        cursor pointer
      input#delete
        float right
        margin-top 13px
        margin-right 10px
        color #D55B5B
        border none
        background transparent
        cursor pointer
      a
        line-height 40px
      font-weight bold
      padding-left 20px
      background-color #d2eced
      .body
        background-color #fff3bf
        padding 20px
#content
  margin-top 30px
#newpost
  width 320px
  margin 20px auto
